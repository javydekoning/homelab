{
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": ["k8s/.+/custom\\.yaml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["helmv3"],
      "matchFiles": ["Chart.yaml"],
      "enabled": true,
      "matchPackagePatterns": [
        "*"
      ],
      "rangeStrategy": "replace"
    }
  ]
}