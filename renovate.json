{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "helm-values": {
    "commitMessagePrefix": "Helm-values:",
    "fileMatch": ["(^|/)values\\.yaml$"],
    "versioning": "loose",
    "packageRules": [
      {
        "matchPackageNames": ["duplicati"],
        "extractVersion": "^development-v(?<version>.*)$"
      }
    ]
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+/custom\\.yaml$"],
    "versioning": "loose"
  }
}
