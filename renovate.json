{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "helm-values": {
    "fileMatch": ["(^|/)values\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+/custom\\.yaml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["helm-values"],
      "matchPackageNames": ["ghcr.io/onedr0p/plex"],
      "versioning": "loose"
    }, {
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
