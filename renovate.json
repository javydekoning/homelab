{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "kubernetes": {
    "fileMatch": ["k8s/.+/custom\\.yaml$"]
  },
  "helmv3": {
    "registryAliases": {
      "stable": "https://charts.helm.sh/stable"
    },
    "commitMessageTopic": "helm chart {{depName}}",
    "fileMatch": ["(^|/)Chart\\.yaml$"]
  }
}
