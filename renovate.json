{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "helm-values": {
    "fileMatch": ["(^|/)values\\.yaml$"],
    "versioning": "loose",
    "packageRules": [
      {
        "matchPackageNames": ["ghcr.io/linuxserver/duplicati"],
        "extractVersion": "^development\\-v(?<version>.*)$",
        "versioning:": "loose"
      }
    ]
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+/custom\\.yaml$"],
    "versioning": "loose"
  }
}
