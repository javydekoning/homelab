{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackageNames": ["duplicati"],
      "extractVersion": "^development-v(?<version>.*)$",
      "versioning": "loose"
    }
  ],
  "helm-values": {
    "commitMessagePrefix": "Helm-values:",
    "fileMatch": ["(^|/)values\\.yaml$"],
    "versioning": "loose"
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+/custom\\.yaml$"],
    "versioning": "loose"
  }
}
