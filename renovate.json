{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "helm-values": {
    "commitMessagePrefix": "Helm-values:",
    "fileMatch": ["(^|/)values\\.yaml$"],
    "versioning": "loose"
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+/custom\\.yaml$"],
    "versioning": "loose"
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["duplicati"],
      "extractVersion": "development\\-v(?<version>.*)",
      "versioning": "loose"
    }
  ]
}
